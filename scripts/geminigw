#!/bin/bash
#
# geminigw - Launch Gemini CLI with Fabric MCP Server
#
# Usage: geminigw
#

set -euo pipefail

GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

PROJECT_DIR="/Users/MAC/Documents/MCP_Cloud_Fabric"
VENV_PYTHON="${PROJECT_DIR}/venv/bin/python"

echo -e "${BLUE}ðŸš€ Fabric AI Gateway - Gemini CLI${NC}"
echo ""

# Check if venv exists
if [ ! -f "$VENV_PYTHON" ]; then
    echo "Error: Virtual environment not found at $PROJECT_DIR/venv"
    echo "Please run: cd $PROJECT_DIR && python -m venv venv && pip install -r requirements.txt"
    exit 1
fi

# Check Gemini CLI
if ! command -v gemini &> /dev/null; then
    echo "Error: Gemini CLI not found"
    echo "Install with: npm install -g @google/gemini-cli"
    exit 1
fi

# Update Gemini MCP config
GEMINI_CONFIG_DIR="${HOME}/.gemini"
mkdir -p "$GEMINI_CONFIG_DIR"

# Create/update settings.json with MCP server
SETTINGS_FILE="${GEMINI_CONFIG_DIR}/settings.json"

# Check if settings.json exists and merge
if [ -f "$SETTINGS_FILE" ]; then
    # Update existing settings using Python
    python3 << PYTHON
import json
import os

settings_path = "$SETTINGS_FILE"
project_dir = "$PROJECT_DIR"

try:
    with open(settings_path, 'r') as f:
        settings = json.load(f)
except:
    settings = {}

# Add MCP servers config
if "mcpServers" not in settings:
    settings["mcpServers"] = {}

settings["mcpServers"]["fabric-gateway"] = {
    "command": f"{project_dir}/venv/bin/python",
    "args": ["-m", "src.mcp_server"],
    "cwd": project_dir
}

with open(settings_path, 'w') as f:
    json.dump(settings, f, indent=2)

print(f"Updated {settings_path}")
PYTHON
else
    # Create new settings file
    cat > "$SETTINGS_FILE" << EOF
{
  "mcpServers": {
    "fabric-gateway": {
      "command": "${PROJECT_DIR}/venv/bin/python",
      "args": ["-m", "src.mcp_server"],
      "cwd": "${PROJECT_DIR}"
    }
  }
}
EOF
    echo "Created $SETTINGS_FILE"
fi

echo -e "${GREEN}âœ“ MCP Server configured${NC}"
echo ""
echo -e "${YELLOW}Tips:${NC}"
echo "  - Type /tools to see available Fabric tools"
echo "  - Ask: 'List my Power BI workspaces'"
echo "  - Ask: 'Connect to workspace X and show tables'"
echo ""
echo -e "${BLUE}Launching Gemini CLI...${NC}"
echo ""

# Launch Gemini
exec gemini
